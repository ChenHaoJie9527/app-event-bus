{
  "name": "small-event-system",
  "version": "0.0.1",
  "description": "Small event system",
  "author": "Small Event System",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": ""
  },
  "scripts": {
    "build": "tsup",
    "test:watch": "vitest --environment=jsdom",
    "lint": "biome check --unsafe .",
    "format": "biome format --write .",
    "format:html": "prettier --write \"docs/**/*.html\"",
    "prepare": "husky install",
    "dev:docs": "cd docs && npm run dev",
    "build:docs": "cd docs && npm run build",
    "preview:docs": "cd docs && npm run preview"
  },
  "files": {
    "includes": [
      "src/api/**/*",
      "src/components/**/*",
      "src/constants/**/*",
      "src/features/**/*",
      "src/hooks/**/*",
      "src/pages/**/*",
      "src/renderer/**/*",
      "src/router/**/*",
      "src/store/**/*",
      "src/utils/**/*",
      "src/workers/**/*",
      "docs/**/*"
    ]
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "knip": "^5.62.0",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "ultracite": "5.0.46",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "prismjs": "^1.30.0",
    "zod": "^4.0.0"
  }
}
