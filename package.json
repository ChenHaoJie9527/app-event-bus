{
  "name": "small-event-system",
  "version": "0.0.1",
  "description": "Small event system",
  "author": "Small Event System",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": ""
  },
  "scripts": {
    "build": "tsup",
    "test:watch": "vitest --environment=jsdom",
    "lint": "biome check --unsafe .",
    "format": "biome format --write .",
    "format:html": "prettier --write \"docs/**/*.html\"",
    "prepare": "husky install",
    "dev:docs": "cd docs && npm run dev",
    "build:docs": "cd docs && npm run build",
    "preview:docs": "cd docs && npm run preview"
  },
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "main": "dist/index.mjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.mts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.mts"
    }
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "@types/node": "^24.1.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "knip": "^5.62.0",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "ultracite": "5.0.46",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "msw": "^2.10.4",
    "prismjs": "^1.30.0",
    "zod": "^4.0.0"
  }
}
